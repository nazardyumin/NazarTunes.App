                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="HelperTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignValidationErrorBrush}" />
