<Window x:Name="window" x:Class="NazarTunes.Views.NazarTunesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:NazarTunes.Views"
        xmlns:VM="clr-namespace:NazarTunes.ViewModels"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="NazarTunes" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen">


    <Window.DataContext>
        <VM:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ResourceDictionary Source="\Views\Styles\Styles.xaml" />
    </Window.Resources>


    <Grid>
        <Border x:Name="AuthorizationLayer" Visibility="{Binding CommonViewModel.AuthorizationLayerVisibility}">

            <!--Visibility="{Binding CommonViewModel.AuthorizationLayerVisibility}">-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0">
                    <ComboBox ItemsSource="{Binding ListLanguages}" SelectedIndex="{Binding SelectedLanguage}" Cursor="Hand" Width="35" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,10,20,0"/>
                    <TextBlock  Text="{Binding Language.Authorization.WelcomeText, UpdateSourceTrigger=PropertyChanged}" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Style="{DynamicResource MaterialDesignHeadline4TextBlock}"
                           Margin="0,100,0,0"/>
                </StackPanel>
       
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="{Binding Authorization.LoginSectionVisibility}">
                    <StackPanel.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding Authorization.CommandEnter}"/>
                    </StackPanel.InputBindings>
                    <TextBox Width="200"
                             Text="{Binding Authorization.Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="{Binding Language.Authorization.LoginHintText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <PasswordBox Width="200" 
                                 materialDesign:PasswordBoxAssist.Password="{Binding Authorization.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                             
                                 materialDesign:HintAssist.Hint="{Binding Language.Authorization.PasswordHintText, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <TextBlock Text="{Binding Authorization.HelperText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HelperTextStyle}"/>



                    <Button Content="{Binding Language.Authorization.ButtonEnterText, UpdateSourceTrigger=PropertyChanged}" 
                            Margin="0,20,0,0"
                            Width="200"
                            Style="{DynamicResource MaterialDesignOutlinedSecondaryDarkButton}"
                            Command="{Binding Authorization.CommandEnter}" Cursor="Hand"/>




                    <Button Content="{Binding Language.Authorization.ButtonNoAccountText, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0 "
                            HorizontalAlignment="Center"
                            Style="{DynamicResource MaterialDesignFlatLightButton}"
                            Command="{Binding Authorization.CommandSwitchToRegistration}"/>
                    
                </StackPanel>



                <StackPanel Grid.Row="1" Visibility="{Binding Authorization.RegistrationSectionVisibility}">
                    <StackPanel.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding Authorization.CommandRegister}"/>
                    </StackPanel.InputBindings>
                    <TextBlock Text="{Binding Language.Authorization.RegistrationHeaderText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Top"
                           Style="{DynamicResource MaterialDesignSubtitle1TextBlock}"/>
                    <TextBox Width="200"
                             Text="{Binding Authorization.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="{Binding Language.Authorization.FirstNameHintText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <TextBox Width="200"
                             Text="{Binding Authorization.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="{Binding Language.Authorization.LastNameHintText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>

                    <TextBox Width="200"
                             Text="{Binding Authorization.Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="{Binding Language.Authorization.LoginHintText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.IsFloating="True"
                             materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <PasswordBox Width="200" 
                                 materialDesign:PasswordBoxAssist.Password="{Binding Authorization.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                             
                                 materialDesign:HintAssist.Hint="{Binding Language.Authorization.PasswordHintText, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <PasswordBox Width="200" 
                                 materialDesign:PasswordBoxAssist.Password="{Binding Authorization.PasswordRepeat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                             
                                 materialDesign:HintAssist.Hint="{Binding Language.Authorization.PasswordHintText, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.IsFloating="True"
                                 materialDesign:TextFieldAssist.HasClearButton="True"/>
                    <TextBlock Text="{Binding Authorization.HelperText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HelperTextStyle}"
                               Margin="0,4,0,0"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button Content="{Binding Language.Authorization.ButtonCancelText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,2,0" Style="{DynamicResource MaterialDesignOutlinedLightButton}" 
                                Command="{Binding Authorization.CommandSwitchToLogin}" Cursor="Hand"/>
                        <Button Content="{Binding Language.Authorization.ButtonRegisterText, UpdateSourceTrigger=PropertyChanged}" Margin="2,0,0,0" Style="{DynamicResource MaterialDesignOutlinedSecondaryDarkButton}"
                                Command="{Binding Authorization.CommandRegister}" Cursor="Hand"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>



        <Border x:Name="AdminLayer" Visibility="{Binding CommonViewModel.AdminLayerVisibility}">
            <!--Visibility="{Binding CommonViewModel.AdminLayerVisibility}">-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="21*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding Language.Authorization.AdministratorModeHeader, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                               Margin="12,0,0,0"/>

                    <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,5,0">
                        <ComboBox ItemsSource="{Binding ListLanguages}" SelectedIndex="{Binding SelectedLanguage}" Cursor="Hand" Width="35" 
                              HorizontalAlignment="Right"
                              VerticalAlignment="Top"
                              Margin="0,3,40,0"/>
                        
                        <TextBlock Text="{Binding CommonViewModel.Admin.User.FirstName}" 
                                   VerticalAlignment="Center" Width="Auto" 
                                   Style="{StaticResource MaterialDesignButtonTextBlock}"/>
                        <TextBlock Text="{Binding CommonViewModel.Admin.User.LastName}"  
                                   VerticalAlignment="Center" Width="Auto" 
                                   Style="{StaticResource MaterialDesignButtonTextBlock}"
                                   Margin="3,0,5,0"/>
                        <Button Content="{Binding Language.Authorization.ButtonLogoutText, UpdateSourceTrigger=PropertyChanged}" Command="{Binding CommonViewModel.CommandLogout}" Style="{StaticResource MaterialDesignFlatLightButton}"/>
                    </StackPanel>
                </Grid>

                <TabControl Grid.Row="1" HorizontalAlignment="Left" SelectedIndex="0" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}" >
                    <!--SelectedIndex="{Binding CommonViewModel.Admin.SelectedTab}"-->
                    <TabItem Header="{Binding Language.AdminTabNomenclatureDb.Header, UpdateSourceTrigger=PropertyChanged}">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="{Binding CommonViewModel.Admin.TabNomenclatureDb.ButtonPanelHeight}" />
                                <RowDefinition  Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" >

                                <StackPanel Margin="8,10,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonEditPerformersText, UpdateSourceTrigger=PropertyChanged}"
                                                Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.CommandOpenCloseEditPerformers}"
                                                Style="{StaticResource MaterialDesignFlatDarkBgButton}" Cursor="Hand"/>
                                        <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonEditBandsText, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"
                                                Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.CommandOpenCloseEditBands}"
                                                Style="{StaticResource MaterialDesignFlatDarkBgButton}" Cursor="Hand"/>
                                        <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonEditGenresText, UpdateSourceTrigger=PropertyChanged}" Margin="5,0,0,0"
                                                Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.CommandOpenCloseEditGenres}"
                                                Style="{StaticResource MaterialDesignFlatDarkBgButton}" Cursor="Hand"/>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditPerformers.IsVisible}" Margin="0,20,0,20">
                                        <StackPanel Orientation="Horizontal" >
                                            <ComboBox ItemsSource="{Binding CommonViewModel.Admin.Database.Performers,UpdateSourceTrigger=PropertyChanged}" Width="200"
                                                      SelectedIndex="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditPerformers.SelectedIndex}"
                                                      materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.ChoosePerformerHintText, UpdateSourceTrigger=PropertyChanged}"
                                                      materialDesign:HintAssist.IsFloating="True">
                                            </ComboBox>
                                            
                                            <TextBox Width="100" Margin="5,0,0,0"
                                                     Text="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditPerformers.TextField1, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.FirstNameHintText, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.IsFloating="True"/>

                                            <TextBox Width="100" Margin="5,0,0,0"
                                                      Text="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditPerformers.TextField2, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.LastNameHintText, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.IsFloating="True"/>
                                            <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonSaveChangesText, UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Cursor="Hand"
                                                    Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                                                    Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditPerformers.CommandSaveChanges}"/>

                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditBands.IsVisible}" Margin="0,20,0,20">
                                        <StackPanel Orientation="Horizontal" >
                                            <ComboBox ItemsSource="{Binding CommonViewModel.Admin.Database.Bands}" Width="200" 
                                                      SelectedIndex="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditBands.SelectedIndex}"
                                                      materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.ChooseBandHintText, UpdateSourceTrigger=PropertyChanged}"
                                                      materialDesign:HintAssist.IsFloating="True">

                                            </ComboBox>
                                            
                                            <TextBox Width="205" Margin="5,0,0,0"
                                                     Text="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditBands.TextField1, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.BandNameHintText, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.IsFloating="True"/>


                                            <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonSaveChangesText, UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Cursor="Hand"
                                                    Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                                                    Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditBands.CommandSaveChanges}"/>

                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditGenres.IsVisible}" Margin="0,20,0,20">
                                        <StackPanel Orientation="Horizontal" >
                                            <ComboBox ItemsSource="{Binding CommonViewModel.Admin.Database.Genres}" Width="200" 
                                                      SelectedIndex="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditGenres.SelectedIndex}"
                                                      materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.ChooseGenreHintText, UpdateSourceTrigger=PropertyChanged}"
                                                      materialDesign:HintAssist.IsFloating="True">
                                            </ComboBox>
                                            <TextBox Width="120" Margin="5,0,0,0"
                                                     Text="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditGenres.TextField1, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabNomenclatureDb.GenreNameHintText, UpdateSourceTrigger=PropertyChanged}"
                                                        materialDesign:HintAssist.IsFloating="True"/>


                                            <Button Content="{Binding Language.AdminTabNomenclatureDb.ButtonSaveChangesText, UpdateSourceTrigger=PropertyChanged}" Margin="15,0,0,0" Cursor="Hand"
                                                    Style="{StaticResource MaterialDesignOutlinedDarkButton}"
                                                    Command="{Binding CommonViewModel.Admin.TabNomenclatureDb.EditGenres.CommandSaveChanges}"/>

                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel Visibility="Hidden">
                                <TextBlock x:Name="ID"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnIdHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Title_"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnTitleHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Band"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnBandHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Performer"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnPerformerHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Tracks"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnTracksHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Genre"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnGenreHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Type"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnTypeHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Publisher"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnPublisherHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Year"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnYearHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Amount"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnAmountHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Sold"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnSoldHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Frozen"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnFrozenHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Price"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnPriceHeader, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock x:Name="Available"  Text="{Binding Language.AdminTabNomenclatureDb.ColumnAvailableHeader, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>

                            <ScrollViewer Margin="5,13,17,0" Grid.Row="1" >
                                <DataGrid ItemsSource="{Binding CommonViewModel.Admin.Database.Nomenclatures, UpdateSourceTrigger=PropertyChanged}"
                                              HorizontalAlignment="Left"
                                              AutoGenerateColumns="False" 
                                              CanUserAddRows="False" 
                                              CanUserDeleteRows="False"
                                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                    <DataGrid.Columns>
                                        
                                        <materialDesign:DataGridTextColumn Binding="{Binding NomenclatureId}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=ID, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.Title}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Title_, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.BandsToString}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Band, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.PerformersToString}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Performer, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.TrackAmount}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Tracks, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.GenresToString}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Genre, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.MediaFormat}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Type, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.Publisher}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Publisher, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding Record.ReleaseYear}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Year, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding TotalAmount}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Amount, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding TotalItemsFrozen}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Frozen, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding TotalItemsSold}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Sold, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <materialDesign:DataGridTextColumn Binding="{Binding SellPrice}" Width="Auto" IsReadOnly="True">
                                            <DataGridTextColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Price, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridTextColumn.Header>
                                        </materialDesign:DataGridTextColumn>

                                        <DataGridCheckBoxColumn Binding="{Binding IsAvailable}" Width="Auto" IsReadOnly="True">
                                            <DataGridCheckBoxColumn.Header>
                                                <TextBlock Text="{Binding ElementName=Available, Path=Text, UpdateSourceTrigger=PropertyChanged}"/>
                                            </DataGridCheckBoxColumn.Header>
                                        </DataGridCheckBoxColumn>
                                        
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                    <TabItem Header="{Binding Language.AdminTabEditAndNewNomenclature.HeaderEditNomenclatures, UpdateSourceTrigger=PropertyChanged}">
                        <StackPanel Margin="0,50,0,0" HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBox Width="70" Margin="0,0,20,0"
                                             Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.SelectedId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.IdHintText, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.IsFloating="True"
                                             materialDesign:TextFieldAssist.HasOutlinedTextField="True"
                                             Focusable="{Binding CommonViewModel.Admin.TabEditNomenclature.CanChangeId }"/>
                                <Button Content="{Binding Language.AdminTabEditAndNewNomenclature.ButtonFindText, UpdateSourceTrigger=PropertyChanged}" 
                                        Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                        Command="{Binding CommonViewModel.Admin.TabEditNomenclature.CommandFindNomenclature}"/>
                            </StackPanel>
                            <TextBlock Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.HelperText, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource HelperTextStyle}"
                                Margin="0,4,0,0"/>

                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,15,0,0">
                                <StackPanel>
                                    <Image Source="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.ImagePath, TargetNullValue={x:Null}}"  HorizontalAlignment="Center" Width="300" Height="300"/>
                                    <TextBox Width="370" Margin="0,10,0,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.CoverPath, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.CoverPathHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                </StackPanel>

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBox Width="430" Margin="0,0,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        HorizontalAlignment="Left"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.TitleHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                        <TextBox Width="70"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.ReleaseYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.YearHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBox Width="300" AcceptsReturn="True" Margin="0,0,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.Bands, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.BandHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                        <TextBox Width="200" AcceptsReturn="True"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.Performers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.PerformerHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0" >
                                        <TextBox Width="170" AcceptsReturn="True" Margin="0,0,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.Genres, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.GenreHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>

                                        <TextBox Width="163" Margin="0,0,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.Publisher, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.PublisherHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>

                                        <TextBox Width="70" Margin="0,0,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.MediaFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.TypeHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>


                                        <TextBox Width="87"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.TotalDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.DurationHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBox Width="70" Margin="0,10,5,0"
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.SellPrice1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.Hint="{Binding Language.AdminTabEditAndNewNomenclature.PriceHintText, UpdateSourceTrigger=PropertyChanged}"
                                        materialDesign:HintAssist.IsFloating="True"
                                        materialDesign:TextFieldAssist.HasOutlinedTextField="True"/>

                                        <TextBlock Text="," VerticalAlignment="Bottom" Margin="0,10,5,0"/>

                                        <TextBox Width="50" Margin="0,10,5,0" 
                                        Text="{Binding CommonViewModel.Admin.TabEditNomenclature.SelectedNomenclature.SellPrice2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
